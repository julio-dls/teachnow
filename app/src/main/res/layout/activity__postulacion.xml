<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:paddingTop="10dp"
        android:inputType="textPersonName"
        android:text="Postularse al empleo"
        android:textAlignment="center"
        android:textColor="#34373b"
        android:textSize="22sp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_job"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="@dimen/activity_vertical_margin"
        android:text="Profesor Materias Varias Empleo Faculta Da Vinci\nVilla Devoto"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ProfesiÃ³n" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Localidad" />

        <Button
            android:id="@+id/adjuntar_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttom_backgorud"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Adjuntar CV"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/send_mail_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/buttom_backgorud"
            android:backgroundTint="#559f4d"
            android:text="Enviar CV"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
